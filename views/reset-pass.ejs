<%- contentFor('title') %>
Đổi mật khẩu mới

<%- contentFor('body') %>
<div class="mx-auto mt-3">
    <div class="card shadow">
        <div class="card-body">
            <form action="/account/reset-pass" method="post" name="changePasswordForm" id="changePasswordForm" class="">
                <input type="text" name="id" value="<%= user.id %>" class="d-none">
                <div class="form-group">
                    <label for="newPass">Mật khẩu mới</label>
                    <input type="password" class="form-control" name="newPass" id="fReset-newPass" placeholder="****">
                </div>

                <div class="form-group">
                    <label for="retypeNewPass">Nhập lại mật khẩu mới</label>
                    <input type="password" class="form-control" name="retypeNewPass" id="fReset-retypeNewPass"
                        placeholder="****">
                </div>
                <button type="submit" class="btn btn-outline-danger float-right">Đổi mật khẩu</button>
            </form>
        </div>
    </div>

</div>
<script src="/javascripts/reset-pass.js"></script>