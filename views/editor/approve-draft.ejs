<%- contentFor('title') %>
Duyệt bài viết
<%- contentFor('body') %>

<!-- reject modal -->
<div class="modal fade" id="rejectModal" tabindex="-1" role="dialog" aria-labelledby="loginModalTitle"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
        
        <!-- Modal Header -->
        <div class="modal-header">
            <h4 class="modal-title">Nêu lý do</h4>
            <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        
        <!-- Modal body -->
        <div class="modal-body">
            <form role="form" class="needs-validation" id="rejectForm" novalidate>
                
                <div class="form-group row required">
                    <div class="col-md-12">
                        <textarea  class="form-control" name="inputReason" id="inputReason" spellcheck="false" rows="10" required></textarea>
                        <div class="invalid-feedback">
                            Chưa nhập lý do <i class="fa fa-smile-o"></i>
                        </div>
                    </div>
                </div>

                <div class="form float-right">
                    <button type="submit" class="btn btn-primary btn-submit" >OK</button>
                </div>
            </form>
        </div>
        
        <!-- Modal footer -->
        <div class="modal-footer">

        </div>
        
        </div>
    </div>
</div>

<!-- approve modal -->
<div class="modal fade" id="approveModal" tabindex="-1" role="dialog" aria-labelledby="loginModalTitle"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
        
        <!-- Modal Header -->
        <div class="modal-header">
            <h4 class="modal-title">Hiệu chỉnh thông tin</h4>
            <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        
        <!-- Modal body -->
        <div class="modal-body">
            <form role="form" class="needs-validation" id="approveForm" novalidate>
                <!-- chọn chuyên mục -->
                <div class="form-group row required">
                    <label for="selectParentCategory" class="col-md-3 col-form-label">Chuyên mục</label>
                    <div class="col-md-4">
                        <select class="form-control" id="selectParentCategory" name="parentCategory" required>
                        </select>
                    </div>
                    <div class="col-md-5">
                        <select class="form-control" id="selectCategory" name="category" required>
                        </select>
                    </div>
                </div>
                <!-- hiệu chỉnh tag-->
                <div class="form-group row">
                    <label for="inputTag" class="col-md-3 col-form-label">Nhãn</label>
                    <div class="col-md-9">
                        <input multiple name="tags" data-role="tagsinput" id="inputTag" />
                    </div>
                </div>

                <div class="form-group row required">
                    <label for="publishDate" class="col-md-3 col-form-label">Ngày xuất bản</label>
                    <div class="date input-group col-md-9" id="datetimePicker">
                        <input type="text" class="input-sm form-control" name="publishDate" id="publishDate" autocomplete="off" required/>
                        <div class="input-group-addon">
                            <span class="input-group-text">
                                <i class="far fa-calendar-alt"></i>
                            </span>
                        </div>
                        <div class="invalid-feedback">
                            Chưa chọn ngày xuất bản <i class="fa fa-smile-o"></i>
                        </div>
                    </div>
                </div>

                <div class="form float-right">
                    <button type="submit" class="btn btn-primary btn-submit" >OK</button>
                </div>
            </form>
        </div>
        
        <!-- Modal footer -->
        <div class="modal-footer">

        </div>
        
        </div>
    </div>
</div>

<div class="row justify-content-around">
    <div class="col-lg-1 p-0"></div>

    <div class="col-lg-10">          
        <div class="card" id="table-card">
            <div class="card-header h2 bg-secondary text-white text-center">Danh sách chờ duyệt</div>
            <div class="card-body">
                <!-- table -->
                <div class="table-reponsive">
                    <!-- button -->
                    <table id="table" data-toolbar="#toolbar">
                        <div id="toolbar">
                            <div class="justify-content-between">
                                <button id="approveBtn" class="btn btn-success" disabled="">
                                    <i class="far fa-check-circle"></i> Duyệt
                                </button>
                                <button id="rejectBtn" class="btn btn-danger" disabled="">                                              
                                    <i class="far fa-times-circle"></i> Từ chối
                                </button>
                            </div> 
                        </div>
                        
                        <!-- context menu -->
                        <div class="dropdown-menu dropdown-menu-sm " id="context-menu" style="z-index: 1051;">
                            <a class="dropdown-item" id="approveItem">Duyệt</a>
                            <a class="dropdown-item" id="rejectItem">Từ chối</a>
                        </div>
                    </table>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-lg-1"></div>
</div>

<script src="/javascripts/approve-draft.js"></script>
