<link rel="stylesheet" href="/stylesheets/manage-user.css">
<%- contentFor('title') %>
Quản lý người dùng
<%- contentFor('body') %>

<!--Alert notify -->

    <!-- Error -->
    <div class="alert alert-danger alert-dismissible fade show mt-3 d-none" role="alert" id="error-alert">
      <h4 class="alert-heading">Đã có lỗi xảy ra: </h4>
      <p id="alert-message"></p>
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    
    <!-- Added user info (include password_ -->
    <div class="alert alert-success alert-dismissible fade show mt-3 d-none" role="alert" id="success-alert">
      <div class="container">
      <h4 class="alert-heading">Thông tin nhân viên mới: </h4>
      <div class="row">
        <div class="col-auto">
           <ol>
                <li>Chức vụ</li>
                <li>Họ tên</li>
                <li>Email</li>
                <li>Ngày sinh</li>
                <li>Mật khẩu (mặt định)</li>
            </ol>
        </div>
        <div class="col">
            <ul style="list-style-type:none;" id="newUser">
                <li class="role"></li>
                <li class="name"></li>
                <li class="email"></li>
                <li class="dayOfBirth"></li>
                <li class="password"></li>
            </ul>
        </div>
      </div>
    </div>
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>

<!-- Modal -->

    <!-- Add user modal-->
    <div class="modal fade" id="addUserModal" tabindex="-1" role="dialog">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form action="/admin/users/add" method="post" id="addUserForm">
              <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Thông tin nhân viên mới</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">
                    <div class="form-group">
                        <label for="role">Loại nhân viên</label>
                        <select class="custom-select" name="roleID" id="role">
                            <option value="2" selected>Phóng viên</option>
                            <option value="3">Biên tập viên</option>
                            <option value="4">Quản trị viên</option>
                        </select>
                    </div>
                    <div class="form-group">
                      <label for="email">Email</label>
                      <input type="email" class="form-control" name="email" id="email">
                    </div>
                    <div class="form-group">
                      <label for="name">Họ và tên</label>
                      <input type="text" class="form-control" name="name" id="name">
                    </div>
                    <div class="form-group">
                      <label for="dayOfBirth">Ngày sinh</label>
                      <input type="text" class="form-control" name="dayOfBirth" id="dayOfBirth" placeholder="dd/mm/yyyy">
                    </div>
              </div>
              <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Cấp tài khoản</button>
              </div>
            </form>
        </div>
      </div>
    </div>

    <!--Update user info modal -->


<div class="row justify-content-around">
    <div class="col-lg-1 p-0">
        <div id="mySidenav" class="sticky-top">
            <!-- category -->
            <a href="#" id="category" class="list-group-item list-group-item-action 
                d-flex justify-content-between align-items-center">
                <div>
                    <i class="fas fa-list mr-2 sidenav-before-icon"></i>
                    <span class="font-weight-bold">Chuyên mục</span>
                </div>
                <i  class="fas fa-list mr-2 float-right sidenav-after-icon"></i>
                <span  class="badge badge-light badge-pill float-right sidenav-badge">30</span>
            </a>
            <!-- tag -->
            <a href="#" id="tag" class="list-group-item list-group-item-action 
                d-flex justify-content-between align-items-center">
                <div>
                    <i class="fas fa-tags mr-2 sidenav-before-icon"></i>
                    <span class="font-weight-bold">Nhãn</span>
                </div>
                <i class="fas fa-tags mr-2 float-right sidenav-after-icon"></i>
                <span class="badge badge-light badge-pill sidenav-badge float-right">50</span>
            </a>
            <!-- article -->
            <a href="#" id="article" class="list-group-item list-group-item-action 
                d-flex justify-content-between align-items-center">
                <div>
                    <i class="far fa-newspaper mr-2 sidenav-before-icon"></i>
                    <span class="font-weight-bold">Bài viết</span>
                </div>
                <i class="far fa-newspaper mr-2 float-right sidenav-after-icon"></i>
                <span class="badge badge-light badge-pill sidenav-badge float-right">1245</span>
            </a>
            <!-- user-->
            <a href="#" id="user" class="list-group-item list-group-item-action 
                d-flex justify-content-between align-items-center">
                <div>
                    <i class="fas fa-users mr-2 sidenav-before-icon"></i>
                    <span class="font-weight-bold">Người dùng</span>
                </div>
                <i class="fas fa-users mr-2 float-right sidenav-after-icon"></i>
                <span class="badge badge-light badge-pill sidenav-badge float-right">609</span>
            </a>
        </div>
    </div>
    <div class="col-lg-10">
            
        <div class="card" id="table-card">
            <div class="card-header h2 bg-secondary text-white text-center">Quản lý người dùng</div>
            <div class="card-body">
                <!-- table -->
                <div class="table-reponsive">
                    <!-- button -->
                    <table id="table" data-toolbar="#toolbar">
                        <div id="toolbar">
                            <div class="justify-content-between">
                                <button id="remove" class="btn btn-danger" disabled="">
                                    <i class="fa fa-trash"></i> Xóa
                                </button>
                                <button id="edit" class="btn btn-success">
                                    <i class="fas fa-user-edit"></i> Sửa
                                </button>
                                <button id="add" class="btn btn-success" data-toggle="modal" data-target="#addUserModal">
                                    <i class="fas fa-user-plus"></i>Thêm
                                </button>
                            </div> 
                        </div>
                        
                        <!-- context menu -->
                        <div class="dropdown-menu dropdown-menu-sm " id="context-menu" style="z-index: 1051;">
                            <a class="dropdown-item" id="editItem">Chỉnh Sửa</a>
                            <a class="dropdown-item" id="removeItem">Xóa</a>
                            <a class="dropdown-item" id="assign">Phân công</a>
                            <a class="dropdown-item" id="renew">Gia hạn</a>
                        </div>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-1">

    </div>
</div>

