<link rel="stylesheet" href="/stylesheets/manage-category.css">
<%- contentFor('title') %>
Quản lý chuyên mục
<%- contentFor('body') %>
<!-- change & add category name modal -->
<div class="modal" id="addOrEditCategoryModal">
    <div class="modal-dialog">
        <div class="modal-content">
        
        <!-- Modal Header -->
        <div class="modal-header">
            <h4 class="modal-title">Nhập tên</h4>
            <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        
        <!-- Modal body -->
        <div class="modal-body">
            <form role="form" class="needs-validation" id="addOrEditCategoryForm" 
            name="category"  novalidate>
                <div class="form-group row required">
                    <label for="inputCategoryName" class="col-md-4 col-form-label">Tên chuyên mục</label>
                    <div class="col-md-8">
                        <input type="text" class="form-control" name="name" id="inputCategoryName" spellcheck="false" required>
                        <div class="invalid-feedback">
                            Chưa nhập tên <i class="fa fa-smile-o"></i>
                        </div>
                    </div>
                </div>

                <div class="form-group row">
                    <label for="selectParentCategory" class="col-md-4 col-form-label">Chuyên mục cha</label>
                    <div class="col-md-8">
                        <select class="form-control" id="selectParentCategory" name="parentID">
                            <%#TODO: Đổ dữ liệu vào theo định dạng này %>
                            <%# <option value="id1">Tên chuyên mục cha 1</option> %>
                        </select>
                    </div>
                </div>

                <div class="form float-right">
                    <button type="submit" class="btn btn-primary btn-submit" >OK</button>
                </div>
            </form>
        </div>
        
        <!-- Modal footer -->
        <div class="modal-footer">

        </div>
        
        </div>
    </div>
</div>
<div class="row justify-content-around">
    <div class="col-lg-1 p-0">
        <div id="mySidenav" class="sticky-top">
            <!-- category -->
            <a href="#" id="category" class="list-group-item list-group-item-action 
                d-flex justify-content-between align-items-center">
                <div>
                    <i class="fas fa-list mr-2 sidenav-before-icon"></i>
                    <span class="font-weight-bold">Chuyên mục</span>
                </div>
                <i  class="fas fa-list mr-2 float-right sidenav-after-icon"></i>
                <span  class="badge badge-light badge-pill float-right sidenav-badge">30</span>
            </a>
            <!-- tag -->
            <a href="#" id="tag" class="list-group-item list-group-item-action 
                d-flex justify-content-between align-items-center">
                <div>
                    <i class="fas fa-tags mr-2 sidenav-before-icon"></i>
                    <span class="font-weight-bold">Nhãn</span>
                </div>
                <i class="fas fa-tags mr-2 float-right sidenav-after-icon"></i>
                <span class="badge badge-light badge-pill sidenav-badge float-right">50</span>
            </a>
            <!-- article -->
            <a href="#" id="article" class="list-group-item list-group-item-action 
                d-flex justify-content-between align-items-center">
                <div>
                    <i class="far fa-newspaper mr-2 sidenav-before-icon"></i>
                    <span class="font-weight-bold">Bài viết</span>
                </div>
                <i class="far fa-newspaper mr-2 float-right sidenav-after-icon"></i>
                <span class="badge badge-light badge-pill sidenav-badge float-right">1245</span>
            </a>
            <!-- user-->
            <a href="#" id="user" class="list-group-item list-group-item-action 
                d-flex justify-content-between align-items-center">
                <div>
                    <i class="fas fa-users mr-2 sidenav-before-icon"></i>
                    <span class="font-weight-bold">Người dùng</span>
                </div>
                <i class="fas fa-users mr-2 float-right sidenav-after-icon"></i>
                <span class="badge badge-light badge-pill sidenav-badge float-right">609</span>
            </a>
        </div>
    </div>
    <div class="col-lg-10">
            
        <div class="card" id="table-card">
            <div class="card-header h2 bg-secondary text-white text-center">Quản lý chuyên mục</div>
            <div class="card-body">
                <!-- table -->
                <div class="table-reponsive">
                    <!-- button -->
                    <table id="table" data-toolbar="#toolbar">
                        <div id="toolbar">
                            <div class="justify-content-between">
                                <button id="remove" class="btn btn-danger" disabled="">
                                    <i class="fa fa-trash"></i> Xóa
                                </button>
                                <button id="edit" class="btn btn-success">
                                    <i class="fas fa-edit"></i> Sửa
                                </button>
                                <button id="add" class="btn btn-success">
                                    <i class="fas fa-plus"></i>Thêm
                                </button>
                            </div> 
                        </div>
                        
                        <!-- context menu -->
                        <div class="dropdown-menu dropdown-menu-sm " id="context-menu" style="z-index: 1051;">
                            <a class="dropdown-item" id="editItem">Chỉnh Sửa</a>
                            <a class="dropdown-item" id="removeItem">Xóa</a>
                        </div>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-1">

    </div>
</div>
<script src="/javascripts/manage-category.js"></script>