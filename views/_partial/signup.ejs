<!-- Modal -->
<div class="modal fade" id="signupModal" tabindex="-1" role="dialog" aria-labelledby="signupModalTitle"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="signupModalTitle">Đăng ký</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                <form action="" method="post" name="accountForm" id="accountForm" class="needs-validation" novalidate>
                    <div class="form-group required">
                        <label for="txtFullName">Họ tên</label>
                        <input type="text" class="form-control" name="fullName" id="txtFullName"
                            aria-describedby="helpId" placeholder="" required>
                        <div class="invalid-feedback">
                            Hãy nhập tên thật của bạn
                        </div>
                    </div>

                    <div class="form-group required">
                        <label for="txtEmail">Email</label>
                        <input type="email" class="form-control" name="email" id="txtEmail"
                            aria-describedby="emailHelpId" placeholder="" required>
                        <div class="invalid-feedback">
                            Hãy nhập địa chỉ email
                        </div>
                    </div>

                    <div class="form-group required">
                        <label for="newPass">Mật khẩu</label>
                        <input type="password" class="form-control" name="newPass" id="newPass" placeholder="****" required>
                        <div class="invalid-feedback">
                            Hãy nhập mật khẩu
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="txtBirthday">Ngày sinh</label>
                        <input type="date" name="birthday" id="txtBirthday" class="form-control" placeholder=""
                            aria-describedby="helpId">
                    </div>

                    <button type="submit" class="btn btn-outline-success float-right">Đăng ký</button>
                </form>
            </div>

            <div class="modal-footer">
                <span>Bạn đã có tài khoản?</span>
                <a href="#loginModal" id="login-now">Đăng nhập ngay</a>
            </div>
        </div>
    </div>
</div>