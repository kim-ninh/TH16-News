 
 <%# Gom lại phần chung của tất cả các người dùng, sau đó so sánh kiểm tra là để hiển thị khu vực 
        riêng của người đó %>
 <div id="accountNavItem" class="navbar-nav navbar-right">
     <div class="dropdown" id="accountDropdown">

         <%# Icon đăng nhập / Avatar thành viên %>
         <% if (false) { %>
         <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
             <span class="fa fa-user"></span>
         </a>
         <% } else { %>
         <!-- Tạo Avatar random: http://pravatar.cc/ -->
         <img src="http://i.pravatar.cc/300" class="rounded-circle dropdown-toggle" data-toggle="dropdown"
             aria-haspopup="true" aria-expanded="false">
         <% }; %>

         <%# Menu dropdown %>
         <div class="dropdown-menu dropdown-menu-right">

             <!-- Chức năng chỉ dành cho khách vãng lai -->
             <a class="dropdown-item" href="#loginModal" data-toggle="modal">Đăng nhập</a>
             <a class="dropdown-item" href="#signupModal" data-toggle="modal">Đăng kí</a>

             <!-- Các chức năng dành cho nhóm người dùng đã đăng nhập-->
             <div class="dropdown-item d-flex flex-row align-items-center">
                 <img src="http://i.pravatar.cc/300" class="rounded-circle dropdown-toggle" data-toggle="dropdown"
                     aria-haspopup="true" aria-expanded="false">

                 <div id="user-wrapper" class="ml-3">
                     <!-- Tên người dùng-->
                     <div id="userName" class="font-weight-bold">Tên người dùng</div>

                     <!-- Nút đăng xuất -->
                     <a class="text-success" href="#">
                         <i class="fas fa-sign-out-alt"></i>
                         <span>Đăng xuất</span>
                     </a>
                 </div>
             </div>

             <!-- Cập nhật thông tin - Đổi mật khẩu -->
             <a href="/account-info/" class="dropdown-item">
                 <i class="fas fa-user-edit"></i>
                 <span>Tài khoản</span>
             </a>

             <!-- Chức năng dành cho subscriber -->
             <a class="dropdown-item" href="#">
                 <i class="fas fa-hand-holding-usd"></i>
                 <span>Gia hạn</span>
             </a>

             <!-- Chức năng dành cho writer -->
             <a class="dropdown-item" href="/writer/new-post/">
                 <i class="fas fa-edit"></i>
                 <span>Đăng bài mới</span>
             </a>

             <a class="dropdown-item" href="/writer/my-post/">
                 <i class="fas fa-newspaper"></i>
                 <span>Bài đã viết</span>
             </a>

             <!-- Chức năng dành cho editor -->
             <a class="dropdown-item" href="/approve-draft/">
                 <i class="fas fa-pen-alt"></i>
                 <span>Duyệt bài viết</span>
             </a>

             <!-- Chức năng dành cho admin -->
             <a class="dropdown-item" href="/admin/categories/">
                 <i class="fas fa-list"></i>
                 <span>Quản lý chuyên mục</span>
             </a>
             <a class="dropdown-item" href="/admin/tags/">
                 <i class="fas fa-tags"></i>
                 <span>Quản lý nhãn</span>
             </a>
             <a class="dropdown-item" href="/admin/posts/">
                 <i class="fas fa-newspaper"></i>
                 <span>Quản lý bài viết</span>
             </a>
             <a class="dropdown-item" href="/admin/users/">
                 <i class="fas fa-users"></i>
                 <span>Quản lý người dùng</span>
             </a>

         </div>
     </div>
 </div>