<div class="<%= display %> d-none mb-3" id="tags-cloud">
    <div class="h3 bg-primary text-white pl-1">TAGS CLOUD</div>
    <div class="bg-light px-1" id="tags-cloud-content">
        <% tags.forEach(tag => { %>  
            <a href="<%= concatToLink(['tags', tag.name]) %>" 
            class="d-inline-block mr-1" rel="<%= tag.totalPost %>">
                <%= tag.name %>
            </a>
        <% }); %>
       
        <% if (tags.length === 0) { %>
            <% for (var i = 0; i < 10; i++) { %>
                <a href="#" class="d-inline-block mr-1 text-dark">
                    <%= 'Trá»‘ng' %>
                </a>
            <% }; %>
        <% }; %>
    </div>
</div>