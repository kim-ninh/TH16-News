<!-- Modal -->
<div class="modal fade" id="loginModal" tabindex="-1" role="dialog" aria-labelledby="loginModalTitle"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="loginModalTitle">Đăng nhập</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                
                <form action="/" method="post" name="loginForm" id="loginForm" class="clearfix">
                    <div class="form-group">
                        <label for="txtEmail">Email</label>
                        <input type="email" class="form-control" name="txtEmail" id="txtEmail"
                            aria-describedby="emailHelpId" placeholder="abc@gmail.com">
                    </div>

                    <div class="form-group">
                        <label for="txtPassword">Mật khẩu</label>
                        <input type="password" class="form-control" name="txtPassword" id="txtPassword"
                            placeholder="********">
                    </div>
                    
                    <small class="form-text text-muted" >
                        <a href="#">Quên mật khẩu?</a>
                    </small>

                    <button type="submit" class="btn btn-primary float-right">Đăng nhập</button>
                </form>

                <div class="text-center my-3 h3">HOẶC</div>

                <div class="d-flex flex-row justify-content-around">
                    <a href="#">
                        <i class="fab fa-facebook-square fa-5x text-primary"></i>
                    </a>

                    <a href="#">
                        <i class="fab fa-github-square fa-5x text-dark"></i>
                    </a>

                    <a href="#">
                        <i class="fab fa-google-plus-square fa-5x text-danger"></i>
                    </a>
                </div>
            </div>

            <div class="modal-footer">
                <span>Bạn chưa có tài khoản?</span>
                <a href="#">Đăng ký ngay</a>
            </div>
        </div>
    </div>
</div>