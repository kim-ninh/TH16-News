<% var postLastCategory; %>
<% if (page.categories.length != 0) { %>
    <% postLastCategory = page.categories.data[0]; %>
    <a href="<%- url_for(postLastCategory.path) %>">
        <h3 class="mt-3">
            <%- postLastCategory.name %>
        </h3>
    </a>
<% }; %>

 <h2 class="display-4 font-weight-bold">
    <%- page.title %>
 </h2>
 <div class="row">
     <div class="col">
        <%# Tác giả - Thời gian đăng (hh:mm dd-mm-yyyy) %>
         <div class="text-muted mb-3 d-inline-block">
            <span class="font-weight-bold"><%- page.author %></span>
            <span><%- '-' %></span>
            <span><%- page.date.format(config.post_date_format) %></span>
         </div>

         <%#TODO: Nút download file pdf, thêm vào thuộc tính href="#" khi đã đăng nhập %>
         <a class="float-right" data-toggle="tooltip" data-placement="left" id="download-article-link" 
         download title="Bạn phải là thành viên mới có thể tải xuống file này">
            Tải xuống 
            <i class="fas fa-file-download"></i>
         </a>

         <!-- Nội dung chi tiết bài viết -->
         <div id="article-detail" class="mb-3">
             <img src="<%- page.head_img %>" class="w-100">
             <div class="container-fuild">
                 <%- page.content %>
             </div>
         </div>

         <!-- Danh sách các thẻ được gắn -->
         <h6 class="mt-3">
             <i class="fas fa-tags mr-2"></i>
             <% page.tags.data.forEach((tag) => { %>
                <a href="<%- url_for(tag.path) %>" class="badge badge-dark">
                    <%- tag.name %>
                </a>
             <% }); %>
         </h6>

         <!-- Khu vực bình luận -->
         <div class="comment-section bg-light w-100 p-3 my-3">
             <input type="text" class="form-control mb-3" style="width: initial;" id="txtName"
                 placeholder="Tên của bạn">
             <textarea class="form-control mb-3" rows="2" id="txtComment"
                 placeholder="Bạn nghĩ gì về tin này?"></textarea>
             <button type="button" class="btn btn-primary" id="comment-btn">Gửi bình luận</button>
         </div>

         <div class="comment-list">
             <h6>Ý kiến bạn đọc</h6>
             <ul class="list-group list-group-flush" id="comment-ul">
                 <li class="list-group-item">
                     <div class="font-weight-bold">Tên độc giả</div>
                     <div>Lorem ipsum, dolor sit amet consectetur adipisicing elit. Libero fuga quo, non
                         voluptates voluptas voluptatem id adipisci vero cupiditate, qui omnis molestias ducimus
                         cumque repudiandae error sit, culpa fugiat dolore!</div>
                     <div class="float-right text-muted">
                         21/04/2019
                     </div>
                 </li>
             </ul>
         </div>

         <!-- Bài viết cùng chuyên mục -->
         <div id="same-category">
             <h3>BÀI VIẾT CÙNG CHUYÊN MỤC</h3>
             <ul class="list-group list-group-flush">

             <%# thay site bằng database thật %>
             <% site.posts.forEach((post) => { %>
                 <li class="list-group-item">
                     <div class="">
                         <img data-src="<%- post.head_img %>" class="float-left mr-2 lazyload"
                             alt="...">
                         <p class="">
                             <a href="<%- url_for(post.path) %>" class="text-dark">
                                 <h4><%- post.title %></h4>
                             </a>
                             <h6 class="card-subtitle my-2 text-muted">
                                 <%- post.date.format(config.date_format) %>
                             </h6>
                             <div class="card-text d-none d-lg-block">
                                 <%- post.abstract %>
                             </div>
                         </p>
                     </div>
                 </li>
             <% }) %>
             </ul>
         </div>
     </div> <!-- col-8-->
     <div class="col-xl-4 d-none d-xl-block" id="right-side">

     </div> <!-- col-4-->